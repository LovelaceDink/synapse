{
  "name": "@synapsejs/synapse",
  "version": "1.0.1",
  "description": "Realtime API Library",
  "main": "build/lib/index.js",
  "types": "build/lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "start": "NODE_ENV=production node ./build/server/server.js",
    "dev": "NODE_ENV=development nodemon",
    "doc": "npx typedoc --mode library --excludeExternals --stripInternal --theme minimal --out docs lib/index.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oslabs-beta/synapse"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/oslabs-beta/synapse/issues"
  },
  "homepage": "https://github.com/oslabs-beta/synapse#readme",
  "dependencies": {
    "express": "^4.17.1",
    "ws": "^7.3.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.6",
    "@types/jest": "^25.2.3",
    "@types/mongoose": "^5.7.21",
    "@types/node": "^14.0.5",
    "@types/supertest": "^2.0.9",
    "bcrypt": "^4.0.1",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-ws": "^4.0.0",
    "jest": "^26.0.1",
    "mongoose": "^5.9.16",
    "nodemon": "^2.0.4",
    "supertest": "^4.0.2",
    "ts-jest": "^26.1.0",
    "ts-node": "^8.10.1",
    "typedoc": "^0.17.0-3",
    "typescript": "^3.9.3",
    "uuid": "^8.1.0"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "txs",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    }
  },
  "nodemonConfig": {
    "watch": [
      "test",
      "synapse"
    ],
    "ext": "ts",
    "exec": "ts-node ./test/index.ts"
  }
}