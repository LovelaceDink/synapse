{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./build",
    "rootDir": "./",
    "experimentalDecorators": true
  },
  "typedocOptions": {
    "name": "synapse",
    "inputFiles": "lib",
    "out": "../docs/public/docs",
    "json": "../docs/data.json",
    "mode": "modules",
    "theme": "../docs/template",
    "hideGenerator": true,
    "exclude": [
      "index.ts",
      "**/index.ts",
      "lib/postgres/*.ts"
    ],
    "excludeNotExported": true
  }
}